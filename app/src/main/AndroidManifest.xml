<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.storycatcher.storycatcher">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StoryCatcher">
        <activity android:name=".GameAdvanced"></activity>
        <activity android:name=".GameIntermediate" />
        <activity android:name=".GameLevels" />
        <activity android:name=".GameEasy" />
        <activity android:name=".ProfilePictureActivity" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VideoPlayer"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden" />
        <activity android:name=".ScreenTime" />
        <activity
            android:name=".Profile"
            android:exported="true" />
        <activity
            android:name=".ChangePassword"
            android:exported="true" />
        <activity
            android:name=".About"
            android:exported="true" />
        <activity
            android:name=".Logout"
            android:exported="true" />
        <activity
            android:name=".Settings"
            android:exported="true" />
        <activity android:name=".GamesScreen" />
        <activity android:name=".MyLibraryScreen" />
        <activity
            android:name=".SearchActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".LibraryScreen" />
        <activity android:name=".UserList" />
        <activity android:name=".CreateProfile" />
        <activity android:name=".PasswordActivity" />
        <activity android:name=".SignOrRegister" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>