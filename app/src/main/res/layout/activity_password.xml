<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD85B"
    tools:context=".PasswordActivity">

    <ImageView
        android:id="@+id/imgWhite"
        android:layout_width="409dp"
        android:layout_height="410dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_all_curve"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtemailpass"
        android:layout_width="317dp"
        android:layout_height="46dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/edit_text_bg"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnresetpassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnresetpassword"
        android:layout_width="317dp"
        android:layout_height="56dp"
        android:layout_marginBottom="40dp"
        android:text="Reset Password"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#FFBB33"
        app:layout_constraintBottom_toTopOf="@+id/imgKoala"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtRecoverAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recover Account"
        android:textColor="#656464"
        android:textSize="25sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/txtemailpass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgWhite" />

    <ImageButton
        android:id="@+id/imgBtnBack"
        android:layout_width="51dp"
        android:layout_height="49dp"
        android:backgroundTint="#FFD85B"
        app:layout_constraintBottom_toTopOf="@+id/imgWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.002"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053"
        app:srcCompat="@drawable/yellowback" />

    <ImageView
        android:id="@+id/imgKoala"
        android:layout_width="114dp"
        android:layout_height="187dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.158"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/koala" />


</androidx.constraintlayout.widget.ConstraintLayout>