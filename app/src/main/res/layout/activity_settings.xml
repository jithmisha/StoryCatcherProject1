<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Settings">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/risque"
        android:text="SETTINGS"
        android:textColor="#D9F6FC"
        android:textSize="48dp"
        app:layout_constraintBottom_toTopOf="@+id/settingsprofilebutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.603" />

    <Button
        android:id="@+id/settingsprofilebutton"
        android:layout_width="317dp"
        android:layout_height="56dp"
        android:layout_marginBottom="40dp"
        android:stateListAnimator="@null"
        android:text="PROFILE"
        android:textColor="#D9F6FC"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#59C0EE"
        app:layout_constraintBottom_toTopOf="@+id/settingsscreentimebutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/settingschangepasswordbutton"
        android:layout_width="317dp"
        android:layout_height="56dp"
        android:layout_marginBottom="40dp"
        android:stateListAnimator="@null"
        android:text="CHANGE PASSWORD"
        android:textColor="#D9F6FC"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#59C0EE"
        app:layout_constraintBottom_toTopOf="@+id/settingaboutbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/settingsscreentimebutton"
        android:layout_width="317dp"
        android:layout_height="56dp"
        android:layout_marginBottom="40dp"
        android:text="SCREEN TIME"
        android:textColor="#D9F6FC"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#59C0EE"
        app:layout_constraintBottom_toTopOf="@+id/settingschangepasswordbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/settingaboutbutton"
        android:layout_width="317dp"
        android:layout_height="56dp"
        android:layout_marginBottom="40dp"
        android:text="ABOUT"
        android:textColor="#D9F6FC"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#59C0EE"
        app:layout_constraintBottom_toTopOf="@+id/settingslogoutbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/settingslogoutbutton"
        android:layout_width="317dp"
        android:layout_height="56dp"
        android:layout_marginBottom="108dp"
        android:stateListAnimator="@null"
        android:text="LOGOUT"
        android:textColor="#D9F6FC"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#59C0EE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:elevation="2dp"
        android:rotation="29"
        app:layout_constraintBottom_toBottomOf="@+id/settingsprofilebutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.958"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="44dp"
        android:layout_height="51dp"
        android:elevation="2dp"
        android:rotation="-13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toStartOf="@+id/settingslogoutbutton"
        app:layout_constraintTop_toTopOf="@+id/settingslogoutbutton"
        app:layout_constraintVertical_bias="0.23"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="51dp"
        android:layout_height="52dp"
        android:elevation="2dp"
        android:rotation="21"
        app:layout_constraintBottom_toTopOf="@+id/settingaboutbutton"
        app:layout_constraintEnd_toEndOf="@+id/settingschangepasswordbutton"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:rotation="21"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/layer_2" />

    <ImageButton
        android:id="@+id/imgBackBtnSettings"
        android:layout_width="51dp"
        android:layout_height="49dp"
        android:backgroundTint="#2B5CA7"
        app:layout_constraintBottom_toTopOf="@+id/settingsprofilebutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.012"
        app:srcCompat="@drawable/back_2" />


</androidx.constraintlayout.widget.ConstraintLayout>